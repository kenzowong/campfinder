<% layout('layouts/boilerplate')%>

    <div class="container justify-content-center align-items-center ">
        <div class="row">
          <div class="col-8 offset-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
            <div class="card shadow">
              <img src="https://images.unsplash.com/photo-1537225228614-56cc3556d7ed?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80" class="card-img-top" alt="">
      
              <div class="card-body">
      
                <h5 class="card-title">Register</h5>
      
                <form action="/register" method="POST">
      
                  <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" autofocus required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="username">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                </div>
                  <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                  </div>
                  <button class="btn btn-success w-100">Register</button>
                </form>
              </div>
      
            </div>
          </div>
        </div>
      </div>